
local Plr = game.Players.LocalPlayer
local Mouse = Plr:GetMouse()
local var = 0


Mouse.KeyDown:connect(function(key)
    if key:lower() == 't' then
        if var == 1 then
			Element = "Fire"
			Special = "Lightning"
			Special2 = "None"
			Game.Players.LocalPlayer.PlayerScripts.BF:Invoke(1586480418, 3)
			Game.ReplicatedStorage.NetworkFolder.ChangeData:InvokeServer(1586480418, {
			{{"Appearance", "Hair 2"}, "Bald"},
			{{"Appearance", "Hair"}, "Bald"},
