			{{"Appearance", "Hair Color"}, "White"},
			{{"Appearance", "Facial Hair"}, "Bald"},
			{{"Appearance", "Shirt"}, "1"},
			{{"Appearance", "Skin"}, "Pastel yellow"},
			{{"Appearance", "Pants"}, "1"},
			{{"Appearance", "Elements"}, Element},
			{{"Appearance", "Facial Hair Color"}, "White"},
			{{"Appearance", "Hair 2 Color"}, "White"},
			{{"PlayerSettings", "Continuable"}, true}})
		end	
        if var == 4 then
			Element = "Air"
			Special = "Flight"
			Special2 = "None"
			Game.Players.LocalPlayer.PlayerScripts.BF:Invoke(1586480418, 3)
			Game.ReplicatedStorage.NetworkFolder.ChangeData:InvokeServer(1586480418, {
			{{"Appearance", "Hair 2"}, "Bald"},
